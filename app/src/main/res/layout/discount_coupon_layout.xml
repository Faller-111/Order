<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="false"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="#A4C6D0"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_height="@dimen/dp_120"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_7"
                android:background="@drawable/discount_coupon_header"/>
            <LinearLayout
                android:background="@drawable/discount_coupon_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_height="@dimen/dp_50"
                        android:src="@mipmap/icon_hotel"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dp_60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Some special off in zhe"
                        android:layout_marginTop="@dimen/dp_12"
                        android:textSize="@dimen/sp_16"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/color_333"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_150"
                        android:maxLines="1"
                        android:textColor="@color/main_color"
                        android:textSize="13sp"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/dp_60"
                        android:layout_marginTop="@dimen/dp_40"
                        android:text="Restaurant name goeklwemr"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OPEN"
                        android:textColor="@color/main_color"
                        android:textSize="26sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_20"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="#EDEDED"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deactline: tomorrow"
                        android:textColor="@color/main_color"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_5"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#A4C6D0"/>
</LinearLayout>