<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fgt.ProfileFragment">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color_f6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/fgt_profile_header"
            android:background="@color/main_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">
            <ImageView
                android:id="@+id/fgt_profile_iv_notice"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:src="@mipmap/tongzhi"
                android:padding="13dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/color_while"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_18"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@color/main_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180">
                    <LinearLayout
                        android:paddingLeft="@dimen/dp_40"
                        android:paddingRight="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_40">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            app:civ_border_width="@dimen/dp_3"
                            android:src="@mipmap/icon_hotel"
                            app:civ_border_color="#80ffffff"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_height="@dimen/dp_80">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="芳华"
                                android:textSize="@dimen/sp_18"
                                android:textColor="@color/color_333" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="LV.6"
                                android:textColor="@color/color_333"
                                android:textSize="@dimen/sp_18"/>
                            <ImageView
                                android:id="@+id/fgt_profile_iv_edit"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:src="@mipmap/logo_bianxie"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="155dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_90"
                        android:background="@drawable/profile_bg">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="66"
                                android:textStyle="bold"
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/color_333"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="Points"
                                android:textSize="@dimen/sp_16"
                                android:textColor="#777777"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="Rp 100k"
                                android:textStyle="bold"
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/color_333"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="Balance"
                                android:textSize="@dimen/sp_16"
                                android:textColor="#777777"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="16"
                                android:textStyle="bold"
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/color_333"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="Coupons"
                                android:textSize="@dimen/sp_16"
                                android:textColor="#777777"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/color_f6"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_90"
                        android:background="@drawable/profile_bg">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/dingdan"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="Dietary Needs"
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/color_333"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/zuji"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="Food Allergies"
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/color_333"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/iconzhengli"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="Personalize"
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/color_333"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/color_f6"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_bg"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_90">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/libao"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Wallect"
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/color_333"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/wujiaoxingkong"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Orders"
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/color_333"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/fanhui"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Reviews"
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/color_333"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/qicheqianlian"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Favorites"
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/color_333"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_90">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/shezhi"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Q＆A"
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/color_333"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/renminbi"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Customer Service"
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/color_333"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/jilu"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Give Feedback"
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/color_333"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/xin"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Share"
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/color_333"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@color/color_f6"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>